<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="textSize" format="dimension" />
    <attr name="textColor" format="color" />
    <attr name="textColorSelected" format="color" />
    <attr name="drawableWidth" format="dimension" />
    <attr name="drawableHeight" format="dimension" />
    <attr name="drawableTint" format="color" />

    <declare-styleable name="IndexSideBar">
        <attr name="textSize" />
        <attr name="textColorNormal" format="color" />
        <attr name="textColorSelected" />
        <attr name="textClosely" format="boolean" />
        <attr name="lineSpacing" format="dimension" />
        <attr name="textBold" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WheelView">
        <attr name="textSize" />
        <attr name="textSizeSelected" format="dimension" />
        <attr name="textColor" />
        <attr name="textColorSelected" />
        <attr name="lineColor" format="color" />
        <attr name="looped" format="boolean" />
        <attr name="showSize" format="integer" />
        <attr name="showCover" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ConstraintDrawableTextView">
        <attr name="drawableWidth" />
        <attr name="drawableHeight" />
    </declare-styleable>

    <declare-styleable name="ConstraintDrawableEditText">
        <attr name="drawableWidth" />
        <attr name="drawableHeight" />
    </declare-styleable>

    <declare-styleable name="ConstraintDrawableCheckBox">
        <attr name="drawableWidth" />
        <attr name="drawableHeight" />
    </declare-styleable>

    <declare-styleable name="ConstraintDrawableRadioButton">
        <attr name="drawableWidth" />
        <attr name="drawableHeight" />
    </declare-styleable>

    <declare-styleable name="ZoomAnimationButton">
        <attr name="drawable" format="reference" />
        <attr name="drawableWidth" />
        <attr name="drawableHeight" />
        <attr name="drawablePadding" format="dimension" />
        <attr name="text" format="string" />
        <attr name="textSize" />
        <attr name="textColor" />
        <attr name="drawableTint" />
        <attr name="startWithImage" format="boolean" />
    </declare-styleable>

</resources>